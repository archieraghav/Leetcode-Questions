class Solution {
    public int numRescueBoats(int[] arr, int limit) {

        Arrays.sort(arr);
        int count = 0;
        int i = 0;
        int j = arr.length - 1;

        while( i <= j ){
            int sum = arr[i] + arr[j];
            if( sum <= limit) {
                count ++;
                i++;
                j--;
            }
            else{
                count ++;
                j--;
            }
        }
        return count;
    }
}
